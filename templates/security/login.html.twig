{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
<div class="jumbotron text-center">
		<h1 class="display-3">Connexion</h1>
			<p class="lead">
				Pas encore inscrit? </p>
			<p class="lead">
				<a class="btn btn-warning btn-lg" href="{{ path('app_register') }}" role="button">Inscription</a>
			</p>
	</div>


	<form method ='post' class = "container-fluid d-flex justify-content-around align-items-center">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		{% if app.user %}
			<div class="mb-3">
				Vous êtes déjà connecté en tant que: 
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Déconnexion</a>
			</div>
		{% endif %}
  <fieldset>
    <div class="form-group row">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
      <small id="emailHelp" class="form-text text-muted">Ne partagez pas votre email</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Mot de passe</label>
      <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>
	<div class="form-group">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<button class="btn btn-lg btn-primary" type="submit">
			Se connecter
		</button>
	</div>
	</form>
{% endblock %}
